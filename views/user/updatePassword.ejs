<%- include('../partials/header.ejs')%>
    <main>
        <div class="centered">
            <div id="login-container">
                <h2>Change password</h2>
                <form action="/users/login" method="POST">

                    <%if (formData) {%>
                        <label class="required" for="username">New Username:</label>
                        <input type="text" id="username" name="username" value="<%=formData.username%>" required>

                        <label class="required" for="password">New Password:</label>
                        <input type="password" id="password" name="password" value="<%=formData.password%>" required>

                        <label class="required" for="confirmPassword">Confirm Password:</label>
                        <input type="password" id="confirmPassword" name="confirmPassword" value="<%=formData.confirmPassword%>" required>
                    <%} else {%>
                        <label class="required" for="username">Username:</label>
                        <input type="text" id="username" name="username" required>

                        <label class="required" for="password">Password:</label>
                        <input type="password" id="password" name="password" required>

                        <label class="required" for="confirmPassword">Confirm Password:</label>
                        <input type="password" id="confirmPassword" name="confirmPassword" required>
                    <%}%>

                    <input type="submit" value="Submit" id="submit">
                </form>
            </div>
        </div>
    </main>
<%- include('../partials/footer.ejs')%>