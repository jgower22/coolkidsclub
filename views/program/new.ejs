<%- include('../partials/header.ejs')%>
    <main>
        <div class="centered">
            <div id="form-container">
                <form action="/programs" method="POST">
                    <h2>Create a new program</h2>
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" placeholder="Program Name" required>

                    <label for="location">Location:</label>
                    <input type="text" id="location" name="location" placeholder="Location" required>
                    
                    <label for="startDate">Start Date:</label>
                    <input type="date" id="startDate" name="startDate" required>

                    <label for="startTime">Start Time:</label>
                    <input type="time" id="startTime" name="startTime" value="12:00" required>

                    <label for="endDate">End Date:</label>
                    <input type="date" id="endDate" name="endDate" required>

                    <label for="endTime">End Time:</label>
                    <input type="time" id="endTime" name="endTime" value="13:00" required>

                    <label for="details">Details:</label>
                    <textarea id="details" name="details" placeholder="Description of Program" rows="4" required></textarea>

                    <input type="submit" id="submit" value="Create Event">
                </form>
            </div>
        </div>
    </main>
<%- include('../partials/footer.ejs')%>